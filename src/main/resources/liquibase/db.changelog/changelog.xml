        <comment>Create table Operations</comment>
        <sql>CREATE TABLE IF NOT EXISTS `Operations`
        (
            `id`           int(11) unsigned NOT NULL AUTO_INCREMENT,
            `service_list` varchar(255) NOT NULL DEFAULT '',
            PRIMARY KEY (`id`)
            )</sql>
